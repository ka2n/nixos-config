# swayidle configuration for River (laptop)
# Matching hypridle-laptop.conf timings

# Lock screen after 5 minutes (300 seconds)
timeout 300 'loginctl lock-session'

# Turn off screen after 7 minutes (420 seconds)
timeout 420 'wlopm --off "*"' resume 'wlopm --on "*"'

# Suspend after 30 minutes (1800 seconds)
timeout 1800 'systemctl suspend'

# Before sleep
before-sleep 'loginctl lock-session'

# Lock command (hyprlock works with River)
lock 'hyprlock'
